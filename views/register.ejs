<% include partials/header %>


<div class="container">
	<h1>Sign Up</h1>
	<form action="/register"method="post">
		<div class="form-group">
		  <input type="text" placeholder="Username" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
				title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters" maxlength="20" name="username" class="form-control" >
		</div>
		<div class="form-group">
		  <input type="password" placeholder="Password" minlength="8" name="password" class="form-control">
		</div>
		
		  <div class="radio">
			<label><input type="radio" name="Role" id="Rectuiter">Club Admin </label>
		  </div>
		<input type="submit" value="Sign Up" class="btn btn-primary">
	</form>
	</div>
<% include partials/footer %>
