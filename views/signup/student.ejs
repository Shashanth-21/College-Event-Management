<% include ../partials/header %>

<h1 class=" d-flex justify-content-center">
	Register for student
</h1>
<div class=row>
	<form action="/register/student" class="mx-auto" method="POST">
		<div class="form-group">
			<input class="form-control " type="text" maxlength="20" name="sName" placeholder="Name" required>
		</div>
		<div class="form-group">
			<input class="form-control " type="text" minlength="10" maxlength="10" name="sUsn" placeholder="USN" required>
		</div>
		<div class="form-group">
			<input class="form-control " type="email" name="sEmail" placeholder="Email" required>
		</div>
		<div class="form-group">
			<input class="form-control " type="text" name="sDepartment" placeholder="Department" required>
		</div>
		
        <div class="form-group">
			<input class="form-control " maxlength="1" type="text" name="sSection" placeholder="Section"required>
		</div>
		<div class="form-group">
			<input class="form-control " type="number" name="sSemester" placeholder="Semester" required>
		</div>
		<div class="form-group">
			<input class="btn  form-control btn-primary" type="submit">
		</div>
	</form>
</div>


<% include ../partials/footer %>