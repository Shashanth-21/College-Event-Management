<% include ../partials/header %>
	
		<h5 class=" d-flex justify-content-center" style="padding-top: 1em;">
			Register for student
		</h5>
		<div class=row id = "acc">
			<form action="/register/student" class="mx-auto" method="POST">
				<div class="form-group">
					<input class="form-control " type="text" maxlength="20" pattern="[A-Z a-z]+" data-valiadation="alphanumeric" name="sName" placeholder="Name" required>
				</div>
				<div class="form-group">
					<input class="form-control " type="text" minlength="10" pattern="[a-z A-Z 0-9]+" maxlength="10" name="sUsn" placeholder="USN"
						required>
				</div>
				<div class="form-group">
					<input class="form-control " type="email" name="sEmail" placeholder="Email" required>
				</div>
				<div class="form-group">
					<input class="form-control " type="text" pattern="[A-Z a-z]{3}" name="sDepartment" placeholder="Department" required>
				</div>

				<div class="form-group">
					<input class="form-control " maxlength="1" type="text" pattern="[A-Z]{1}" name="sSection" placeholder="Section"
						required>
				</div>
				<div class="form-group">
					<input class="form-control " type="number" min="1" max="8" maxlength="1" name="sSemester" placeholder="Semester" required>
				</div>
				<div class="form-group">
					<input class="fadeIn fourth" type="submit">
				</div>
			</form>
		</div>
	



	<% include ../partials/footer %>