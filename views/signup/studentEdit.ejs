<% include ../partials/header %>

<h1 class=" d-flex justify-content-center">
	Update Your Details!
</h1>
<div class=row>
	<form action="/MyAcc" class="mx-auto" method="POST">
		<div class="form-group">
			<input class="form-control " type="text" maxlength="20" name="sName" placeholder="Name" value="<%=data.SName%>" required>
		</div>
		<div class="form-group">
			<input class="form-control " type="text" minlength="10" maxlength="10" name="sUsn" placeholder="USN" value="<%=data.USN%>"required>
		</div>
		<div class="form-group">
			<input class="form-control " type="email" name="sEmail" placeholder="USN" value="<%=data.Email%>"required>
		</div>
		<div class="form-group">
			<input class="form-control " type="text" name="sDepartment" placeholder="Department" value="<%=data.Department%>"required>
		</div>
		
        <div class="form-group">
			<input class="form-control " type="text" name="sSection" placeholder="Section" value="<%=data.Section%>"required>
		</div>
		<div class="form-group">
			<input class="form-control " type="number" name="sSemester" placeholder="Semester" value="<%=data.Semester%>"required>
		</div>
		<div class="form-group">
			<input class="btn  form-control btn-primary" type="submit" value="Update">
		</div>
	</form>
</div>


<% include ../partials/footer %>