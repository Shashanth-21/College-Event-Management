<% include ../partials/header %>
<div class="container">	
<header class="jumbotron mt-5">
	<div class="container">	
		<h1 class="display-4">Events</h1>
			  <p class="lead">All Upcoming Events in our college</p>
			  <% if(currentUser && currentUser.role == 'Admin'){ %>
		<a class="btn btn-default btn-lg" style = "background-color: black; color: white; " href="/movies/new" role="button">Add new event</a>
		<%}%>
	</div>
</header>

<div class="row" style="display:flex; flex-wrap: wrap;">
	<% list.forEach((event)=>{ %>
		
	<div class="col-md-3 col-sm-12 mx-1"> 
		<div class="card mx-auto" >
			<!-- <img src="" class="card-img-top" alt="..."> -->
			<div class="card-body">
				<h5 class="card-title"><%= event.Name %></h5>
				<p class="card-text"><%= event.Venue %></p>
				<p class="card-text"><%= event.Last_date %></p>
			</div>
			
			
			<a href="/movies/<%=event.idEvents%>" class="btn btn-warning">More Info</a>
		</div>
	</div>
	<%})%>
</div>
<% include ../partials/footer %>
