<% include ../partials/header %>
<h1 class=" d-flex justify-content-center">
	Payment Info 
</h1>
<div class=row>
	<form action="/movies/<%=event.idEvents%>/pay" class="mx-auto" method="POST">
		<div class="form-group">
			<input class="form-control " type="text" name="eName" placeholder="Name" required value="<%=event.Name%>" readonly>
		</div>
		<div class="form-group">
			<input class="form-control " type="text" name="eFee" placeholder="Fee" required value="<%=event.Fee%>" readonly>
		</div>
		<div class="form-group">
			<input class="btn  form-control btn-primary" type="submit" value="Pay">
		</div>
	</form>
</div>
<a href="/movies/<%=event.idEvents%>">Go Back </a>
<% include ../partials/footer %>