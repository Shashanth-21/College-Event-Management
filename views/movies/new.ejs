<% include ../partials/header %>

<h5 class=" d-flex justify-content-center" style="padding-top: 1em;">
	Add Event
</h5>
<div class=row>
	<form action="/movies" class="mx-auto" method="POST">
		<div class="form-group">
			<input class="form-control " type="text" name="eName" placeholder="Name" required>
		</div>
		<label>Date of Event</label>
		<div class="form-group">
			<input class="form-control " id="datefield" type="date" name="eDate" placeholder="EventDate"name="trip-start" min="" max="" required>
		</div>
		<div class="form-group">
			<input class="form-control " type="text" name="eVenue" placeholder="Venue" required>
		</div>
		<label>Last Date for Registration</label>
		<div class="form-group">
			<input class="form-control " id="datefield" type="date" name="eLDate" placeholder="last date (yyyy-mm-dd) format" name="trip-start" min="" max="" required>
		</div>
		<div class="form-group">
			<input class="form-control " type="text" name="eFee" placeholder="Fee" required>
		</div>
		<div class="form-group">
			<input class="fadeIn Fourth" type="submit">
		</div>
	</form>
</div>
<a href="/movies">Go Back </a>
<% include ../partials/footer %>