<% include ../partials/header %>

<div class=" d-flex justify-content-center"  style=" margin: 2em 30em 10em; padding: auto; text-align: center;" >
	 <form action="/events/<%=event.idEvents%>/pay" method="POST"> 
      <h5>Payment</h5>
			<p >Event Fee(INR):</p>
			<input class="form-control " type="text" name="eFee" placeholder="Fee"  readonly value="<%=event.Fee%>">	
      <div style="margin-top: 0.5em; margin-left: 0.5rem;">
        <script  
        src="//checkout.stripe.com/v2/checkout.js"
        class="stripe-button" 
        data-key="<%= key %>" 
        data-amount="<%= event.Fee*100%>"+ 
        data-currency="INR" 
        data-name="<%=currentUser.username%>" 
        data-description="<%= event.Name%>" 
        data-locale="auto"> 
        </script> 

      </div>
    </form> 
</div>

<a href="/events/<%=event.idEvents%>">Go Back </a>
<% include ../partials/footer %>