<% include ../partials/header %>
	<div>
		<marquee width="60%" direction="right" height="100px" id="marq" >
			UPCOMING EVENTS: <% display.forEach((event)=>{ %>
						*     <%=event.Name%>(<%=event.date%>)    *
				<%})%>
		</marquee>
		<div class="jumbotron mt-5 bg-default" id="jumb">
			<h1 class="display-4">Events</h1>
			<p class="lead">All Upcoming Events in our college</p>
			<% if(currentUser && currentUser.role=='Admin' ){ %>
				<a class="btn btn-default btn-lg" style="background-color: black; color: white;" href="/events/new"
					role="button">Add new event</a>
				
				<%}%>
		</div>
		<div class="indexpage">
			<div class="row right" style="display:flex; flex-wrap: wrap;">
				<% list.forEach((event)=>{ %>

					<div class="col-md-3 col-sm-12 mx-1">
						<div class="card mx-auto " >
							<!-- <img src="<%=event.Image%>" class="card-img-top" alt="..."> -->
							<div class="card-body">
								<h5 class="card-title">
									<%= event.Name %>
								</h5>
								<p class="card-text">
									<%= event.Venue%>
								</p>
								<p class="card-text">
									<%= event.date%>
								</p>
							</div>
							<a href="/events/<%=event.idEvents%>" class="btn btn-xs btn-default" style="background-color: #D8BBAA; margin: 0.4em 3em;">More Info</a>
						</div>
					</div>
					<%})%>

			</div>
		</div>



		<% include ../partials/footer %>